@model TTAnhNgu.NHOM_NGUOI_DUNG

@{
    ViewBag.Title = "CreateGroup";
    Layout = "~/Areas/Admin/Views/Shared/_AdminNavSidenav.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="container p-0">
            <div class="row justify-content-center">
                <div class="col-lg">
                    <div class="card border-0 rounded-lg">
                        <div><h3 class="font-weight-light my-4">Thêm nhóm người dùng</h3></div>
                        <div class="card-body p-0">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group mb-3 row align-items-center">
                                @*@Html.LabelFor(model => model.NND_TENNHOMND, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <label class="control-label col-md-3 align-self-center">Tên nhóm</label>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.NND_TENNHOMND, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NND_TENNHOMND, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center py-1">
                            <div class="d-flex align-items-center justify-content-center mb-0">
                                @Html.ActionLink("Quay trở về", "getListGroup", null, new { @class = "small m-1", @style = "text-decoration:none;" })
                                <input type="submit" value="Thêm" class="btn btn-primary m-1" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
