@model IEnumerable<TTAnhNgu.GIAO_VIEN>

@{
    ViewBag.Title = "getListTeacher";
    Layout = "~/Areas/Admin/Views/Shared/_AdminNavSidenav.cshtml";
    var account = (GIAO_VIEN)HttpContext.Current.Session["user"];
}
<div>
    <div>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Giáo viên</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                <li class="breadcrumb-item active">Tables</li>
            </ol>
            <h5>
                @if (account.NHOM_NGUOI_DUNG.NND_TENNHOMND.ToUpper() == "ADMIN" && Session["user"] != null)
                {
                    @Html.ActionLink("Thêm mới", "CreateTeacher", null, new { @class = "btn btn-success", @style = "text-decoration:none;" })

                }
            </h5>
            <div class="card mb-4">
                @*<div class="card-header">
                        <i class="fas fa-table me-1"></i>
                    </div>*@
                <div class="card-body">
                    @*<div class="table-responsive">*@
                    @*<table class="table table-bordered mb-0">*@
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th><label class="control-label align-self-center">Họ tên</label></th>
                                <th><label class="control-label align-self-center">CCCD</label></th>
                                <th><label class="control-label align-self-center">Giới tính</label></th>
                                <th><label class="control-label align-self-center">Ngày sinh</label></th>
                                <th><label class="control-label align-self-center">Địa chỉ</label></th>
                                <th><label class="control-label align-self-center">Số điện thoại</label></th>
                                <th><label class="control-label align-self-center">Email</label></th>
                                <th><label class="control-label align-self-center">Trình độ tiếng anh</label></th>
                                <th><label class="control-label align-self-center">Thuộc nhóm</label></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_HOTEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_CCCD)
                                    </td>
                                    @if (item.GV_GIOITINH == false)
                                    {
                                        <td>
                                            Nam
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            Nữ
                                        </td>
                                    }
                                    <td>
                                        @String.Format("{0:dd-MM-yyyy}", item.GV_NGAYSINH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_DIACHI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_EMAIL)
                                    </td>
                                    @Html.HiddenFor(modelItem => item.GV_MATKHAU)
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GV_TRINHDOTA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NHOM_NGUOI_DUNG.NND_TENNHOMND)
                                    </td>
                                    <td>
                                        @if (account.NHOM_NGUOI_DUNG.NND_TENNHOMND.ToUpper() == "ADMIN" && Session["user"] != null)
                                        {
                                            @Html.ActionLink("Edit", "EditTeacher", new { id = item.GV_MAGV }, new { @class = "btn btn-warning mx-1" })
                                            @Html.ActionLink("Details", "Details", new { id = item.GV_MAGV }, new { @class = "btn btn-info mx-1" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.GV_MAGV }, new { @class = "btn btn-danger mx-1" })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
